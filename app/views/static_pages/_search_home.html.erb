<%= search_form_for @search, url: root_path do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.search_field :name_or_location_or_national_cont, class: "single-input", placeholder: t(".where_are_you_going"), required: true %>
    </div>

    <div class="col-md-4">
      <%= f.search_field :location_type_name_cont, class: "single-input", placeholder: t(".stay_type"), required: true %>
    </div>

    <div class="col-md-2">
      <%= button_tag t(".search"), class: "genric-btn info" %>
    </div>

    <div class="row mt-4">
      <div class="col-md-8">
        <label><%= t ".price_range"%></label>
        <div id="slider-range"></div>
      </div>
      <div class="col-md-2">
        <label><%= t ".min_price"%></label>
        <%= f.text_field :rooms_price_gteq, class: "single-input" %>
      </div>
      <div class="col-md-2">
        <label><%= t ".max_price"%></label>
        <%= f.text_field :rooms_price_lteq, class: "single-input" %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-4">
        <label><%= t ".occupancy_limits"%></label>
        <div class="form-select" id="default-select2">
          <%= f.select :rooms_occupancy_limit_gteq, Settings.static_pages.search_home.occupancy_limit, prompt: "Select...", class: "nice-select " %>
        </div>
      </div>

      <div class="col-md-4">
        <label><%= t ".livingrooms"%></label>
        <div class="form-select" id="default-select2">
          <%= f.select :rooms_living_room_gteq, Settings.static_pages.search_home.living_room, prompt: "Select...", class: "nice-select " %>
        </div>
      </div>

      <div class="col-md-4">
        <label><%= t ".bedrooms"%></label>
        <div class="form-select" id="default-select2">
          <%= f.select :rooms_bed_room_gteq, Settings.static_pages.search_home.bed_room, prompt: "Select...", class: "nice-select " %>
        </div>
      </div>

      <div class="col-md-4 mt-4">
        <label><%= t ".bathrooms"%></label>
        <div class="form-select" id="default-select2">
          <%= f.select :rooms_bath_room_gteq, Settings.static_pages.search_home.bath_room, prompt: "Select...", class: "nice-select " %>
        </div>
      </div>

      <div class="col-md-4 mt-4">
        <label><%= t ".star_rating"%></label>
        <div class="form-select" id="default-select2">
          <%= f.select :total_rate_gteq, Settings.static_pages.search_home.total_rate, prompt: "Select...", class: "nice-select " %>
        </div>
      </div>
    </div>

  </div>
<% end %>
