<%= provide :title, t(".locations") %>

<div class="row">
  <div class="col-md-12 card">
    <div class="card-body">
      <h4 class="card-title"><%= t ".locations" %>
        <%= link_to "Create new", new_manager_location_path, class: "btn btn-outline-success ml-3" %>
      </h4>

      <table class="table">
        <thead>
          <tr>
            <th><%= t ".location_name" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".location_type_id" %></th>
            <th><%= t ".created_at" %></th>
            <th><%= t ".update_at" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @locations %>
        </tbody>
      </table>
      <%= paginate @locations %>
    </div>
  </div>
</div>
