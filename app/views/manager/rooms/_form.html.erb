<%= form_for [:manager, @location, @room] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
  </div>
  <div class="form-group">
    <%= f.label :occupancy_limit, t(".form_occupancy_limit")%>
    <%= f.text_field :occupancy_limit, class: "form-control", placeholder: t(".enter_occupancy_limit") %>
  </div>
  <div class="form-group">
    <%= f.label :living_room, t(".form_living_room")%>
    <%= f.text_field :living_room, class: "form-control", placeholder: t(".enter_living_room") %>
  </div>
  <div class="form-group">
    <%= f.label :bed_room, t(".form_bed_room")%>
    <%= f.text_field :bed_room, class: "form-control", placeholder: t(".enter_bed_room") %>
  </div>
  <div class="form-group">
    <%= f.label :bath_room, t(".form_bath_room") %>
    <%= f.text_field :bath_room, class: "form-control", placeholder: t(".enter_bath_room") %>
  </div>
  <div class="form-group">
    <%= f.label :number_of_bed, t(".form_number_of_bed") %>
    <%= f.text_field :number_of_bed, class: "form-control", placeholder: t(".enter_number_of_bed") %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, t(".form_quantity") %>
    <%= f.text_field :quantity, class: "form-control", placeholder: t(".enter_quantity") %>
  </div>
  <div class="form-group">
    <%= f.label :price, t(".form_price") %>
    <%= f.text_field :price, class: "form-control", placeholder: t(".enter_price") %>
  </div>
  <div class="form-group">
    <%= f.label :bed_detail, t(".form_bed_detail") %>
    <%= f.select :bed_detail_id, @room.bed_detail_option, { include_blank: false }, class: "js-example-basic-single", style: "width:100%" %>
  </div>
  <div class="form-group">
    <%= f.label :service, t(".form_services") %>
    <%= select "room", "services", @room.service_option, { include_blank: true }, class: "js-example-basic-multiple", multiple: "multiple", style: "width:100%" %>
  <div class="form-group">
    <%= f.label :pictures %>
    <%= f.file_field :pictures, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png",  class: "file-upload-default" %>
    <div class="input-group col-xs-12">
      <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
      <span class="input-group-append">
        <button class="file-upload-browse btn btn-info" type="button">Upload</button>
      </span>
    </div>
  </div>
  <%= f.button yield(:button_text), class: "btn btn-success mr-2" %>
  <%= link_to t(".form_cancel"), request.referer, class: "btn btn-light" %>
<% end %>
